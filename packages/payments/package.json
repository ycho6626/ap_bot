{
  "name": "@ap/payments",
  "version": "0.1.0",
  "description": "Stripe payment processing for AP Calculus bot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ap/shared": "workspace:*",
    "stripe": "^14.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.6.0",
    "vitest": "^1.6.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./roles": {
      "types": "./dist/roles.d.ts",
      "default": "./dist/roles.js"
    },
    "./stripe": {
      "types": "./dist/stripe.d.ts",
      "default": "./dist/stripe.js"
    }
  }
}
