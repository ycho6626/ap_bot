      "steps": {
        "required": true,
        "enforce": true,
        "format": "show_all_work",
        "min_steps": 2
      }
    },
    "notation": {
      "derivatives": {
        "format": "dy/dx",
        "alternative": "f'(x)",
        "enforce": true
      },
      "integrals": {
        "format": "∫",
        "enforce": true
      },
      "limits": {
        "format": "lim",
        "enforce": true
      },
      "functions": {
