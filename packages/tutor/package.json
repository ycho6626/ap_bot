{
  "name": "@ap/tutor",
  "version": "0.1.0",
  "description": "AP Calculus tutor engine with VAM (Verified Answer Mode)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ap/shared": "workspace:*",
    "openai": "^4.20.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./llm": {
      "types": "./dist/llm.d.ts",
      "default": "./dist/llm.js"
    },
    "./retrieval": {
      "types": "./dist/retrieval/index.d.ts",
      "default": "./dist/retrieval/index.js"
    },
    "./canonical": {
      "types": "./dist/canonical.d.ts",
      "default": "./dist/canonical.js"
    },
    "./postprocess": {
      "types": "./dist/postprocess.d.ts",
      "default": "./dist/postprocess.js"
    },
    "./verify": {
      "types": "./dist/verify.d.ts",
      "default": "./dist/verify.js"
    },
    "./coach": {
      "types": "./dist/coach.d.ts",
      "default": "./dist/coach.js"
    }
  }
}
