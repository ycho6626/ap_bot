{
  "name": "@ap/shared",
  "version": "0.1.0",
  "description": "Shared utilities and configuration for AP Calculus bot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/semantic-conventions": "^1.18.0",
    "@supabase/supabase-js": "^2.38.0",
    "ioredis": "^5.3.2",
    "ky": "^1.10.0",
    "pino": "^8.21.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.js"
    },
    "./supabase": {
      "types": "./dist/supabase.d.ts",
      "default": "./dist/supabase.js"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "default": "./dist/logger.js"
    },
    "./tracing": {
      "types": "./dist/tracing.d.ts",
      "default": "./dist/tracing.js"
    },
    "./http": {
      "types": "./dist/http.d.ts",
      "default": "./dist/http.js"
    },
    "./numeric": {
      "types": "./dist/numeric.d.ts",
      "default": "./dist/numeric.js"
    },
    "./rateLimit": {
      "types": "./dist/rateLimit.d.ts",
      "default": "./dist/rateLimit.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./httpUtils": {
      "types": "./dist/httpUtils.d.ts",
      "default": "./dist/httpUtils.js"
    }
  }
}
